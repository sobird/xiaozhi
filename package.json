  "author": "sobird",
  "license": "MIT",
  "dependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@sobird/opusscript": "^0.1.1",
    "commander": "^13.1.0",
    "mqtt": "^5.10.3",
    "next": "^15.1.7",
    "ora": "^8.2.0",
    "prompts": "^2.4.2",
    "rc": "^1.2.8",
    "string-width": "^7.2.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
