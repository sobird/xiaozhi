    "@types/prompts": "^2.4.9",
    "@types/rc": "^1.2.4",
    "@types/react": "19.0.10",
    "@types/ws": "^8.5.14",
    "@types/xml2js": "^0.4.14",
    "aedes": "^0.51.3",
