{
  "name": "@sobird/xiaozhi",
  "version": "1.0.1",
  "description": "Run your XiaoZhi AI on the terminal",
  "type": "module",
  "main": "index.js",
  "bin": {
    "xzai": "./dist/index.js"
  },
  "scripts": {
    "start": "tsx index.ts",
    "build": "rollup -c --environment NODE_ENV:production",
    "eslint:fix": "eslint src --fix",
    "test": "echo \"husky test scripts\"",
    "lint:eslint": "eslint src --ext ts,js --report-unused-disable-directives --max-warnings 10",
    "preversion": "pnpm lint:eslint",
    "version": "git add -A .",
    "postversion": "git push && git push --tags",
    "postinstall": "echo \"postinstall\"",
    "prepare": "husky",
    "prepublishOnly": "tsx scripts/prepublish.ts"
  },
  "keywords": [
    "xiaozhi",
    "ai",
    "typescript",
    "terminal"
  ],
  "author": "sobird",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.10.3",
    "node-record-lpcm16": "^1.0.1",
    "opusscript": "^0.1.1",
    "ora": "^8.2.0",
    "speaker": "^0.5.5",
    "string-width": "^7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.17.19",
    "@types/ws": "^8.5.14",
    "aedes": "^0.51.3",
    "eslint-config-sobird": "^0.2.16",
    "glob": "^10.4.5",
    "husky": "^9.1.7",
    "rollup": "^4.34.7",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "ws": "^8.18.0"
  }
}